@model System.Data.DataTable

@{
    ViewData["Title"] = "List of Phones";
}

    <div class="jumbotron" >
        <h1 class="text-center">@ViewData["Title"]</h1>
    </div>


<table class="table table table-dark">
    <thead class="thead-light">
        <tr>
            <th>
               Phone Brand
            </th>
            <th>
                Phone Model
            </th>
            <th>
               Phone Price
            </th>
            <th>
                <a asp-action="AddorEdit">Create New</a>
            </th>
        </tr>
    </thead>
    <tbody>
       @for(int i=0; i < Model.Rows.Count; i++) 
        {
        <tr>
            <td>
                @Model.Rows[i]["Brand"]
            </td>
            <td>
                @Model.Rows[i]["Model"]
            </td>
            <td>
                @Model.Rows[i]["Price"]
            </td>
            <td>
                <a asp-action="AddorEdit" asp-route-id=" @Model.Rows[i]["PhoneID"]" class="btn-primary">Edit</a> |
                <a asp-action="Delete" asp-route-id="@Model.Rows[i]["PhoneID"]" class="btn-danger">Delete</a>
            </td>
        </tr>
} 
    </tbody>
</table>
